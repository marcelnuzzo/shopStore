{% extends 'base_admin.html.twig' %}

{% block title %}Liste des utilisateurs!{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 id="haut" style="text-decoration:underline;color:blue;text-align:center">Liste des utilisateurs</h1>
    <a href="{{ path('home') }}" class="btn btn-info">Retour au menu principale</a> 
</div>
<a class="btn btn-warning" style="color:white" href="{{ path('admin_createUti') }}" role="button" >Créer</a>
<hr>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Login</th>
        <th>Mot de passe</th>
        <th>Date de location</th>
        <th>Durée</th>
        <th>Fin de location</th>
        <th>Mail</th>
    </tr>
    {%for utilisateur in utilisateurs %}
        <tr>
            <td>{{ utilisateur.id }}</td>
            <td>{{ utilisateur.nom }}</td>
            <td>{{ utilisateur.prenom }}</td>
            <td>{{ utilisateur.dateDeNaissance }}</td>
            <td>{{ utilisateur.login }}</td>
            <td>{{ utilisateur.motDePasse }}</td>
            <td>{{ utilisateur.dateDeLocation }}</td>
            <td>{{ utilisateur.duree }}</td>
            <td>{{ utilisateur.finDeLocation }}</td>
            <td>{{ utilisateur.mail }}</td>
            <td><a class="btn btn-info" style="color:white" href="{{ path('admin_editUti', {'id':utilisateur.id}) }}" role="button" >Modifier</a></td>
            <td><a class="btn btn-danger" style="color:white" href="{{ path('admin_deleteUti', {'id':utilisateur.id}) }} " role="button" >Supprimer</a></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}